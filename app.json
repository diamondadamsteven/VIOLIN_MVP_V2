{
  "expo": {
    "name": "VIOLIN_MVP",
    "slug": "VIOLIN_MVP",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "violinmvp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We need access to your microphone to record audio."
      }
    },
    "android": {
      "adaptiveIcon": { "backgroundColor": "#ffffff" },
      "edgeToEdgeEnabled": true,
      "package": "com.diamondadamsteven.VIOLIN_MVP",
      "permissions": [
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_MICROPHONE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static"
    },
    "plugins": [
      "expo-router",
      ["expo-splash-screen", { "imageWidth": 200, "resizeMode": "contain", "backgroundColor": "#ffffff" }],
      ["expo-av", { "microphonePermission": "We need access to your microphone to record audio." }]
    ],
    "experiments": { "typedRoutes": true }
  }
}
